# ===========================================
# AgenticMemory Environment Configuration
# ===========================================
# Copy this file to .env and update the values

# -----------------------------------------
# OpenAI API Configuration
# -----------------------------------------
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL_ID=gpt-4o
OPENAI_API_KEY=your_openai_api_key_here

# -----------------------------------------
# LLM Configuration (Main LLM for memory)
# -----------------------------------------
LLM_MODEL=gpt-4o
LLM_BASE_URL=https://api.openai.com/v1
LLM_API_KEY=your_llm_api_key_here

# -----------------------------------------
# Embedder Configuration
# -----------------------------------------
EMBEDDER_MODEL=text-embedding-3-small
EMBEDDER_BASE_URL=https://api.openai.com/v1
EMBEDDER_API_KEY=your_embedder_api_key_here

# -----------------------------------------
# PostgreSQL Configuration
# -----------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=agenticMermoryDB
POSTGRES_USER=user-name
POSTGRES_PASSWORD=strong-password

# -----------------------------------------
# pgAdmin Configuration
# -----------------------------------------
PGADMIN_EMAIL=admin@agmem.local
PGADMIN_PASSWORD=strong-password

# -----------------------------------------
# Qdrant Vector Database Configuration
# -----------------------------------------
QDRANT_URL=http://localhost:6333

# -----------------------------------------
# Redis Cache Configuration
# -----------------------------------------
REDIS_URL=redis://localhost:6379

# -----------------------------------------
# Neo4j Graph Database Configuration
# -----------------------------------------
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=strong-password

# -----------------------------------------
# FalkorDB Configuration (Optional)
# -----------------------------------------
RUN_FALKORDB_DEMO=false
FALKORDB_HOST=localhost
FALKORDB_PORT=6380
FALKORDB_USER=
FALKORDB_PASSWORD=
FALKORDB_GRAPH_NAME=agentic_memory
FALKORDB_USE_TLS=false

# -----------------------------------------
# Multi-Tenancy Configuration
# -----------------------------------------
# Default tenant type: user, agent, session
DEFAULT_TENANT_TYPE=user
# Session TTL in seconds (for temporary session memories)
SESSION_TTL_SECONDS=3600
# Enable strict tenant isolation
ENABLE_TENANT_ISOLATION=true

# -----------------------------------------
# Alternative LLM Providers (Optional)
# -----------------------------------------
# DeepSeek
DEEPSEEK_API_KEY=your_deepseek_api_key
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL_ID=deepseek-chat

# Synthetic
SYNTHETIC_API_KEY=your_synthetic_api_key
SYNTHETIC_BASE_URL=https://api.synthetic.new/openai/v1
SYNTHETIC_MODEL_ID=hf:openai/gpt-oss-120b

# Local Foundry
FOUNDARYLOCAL_API_KEY=your_local_api_key
FOUNDARYLOCAL_BASE_URL=http://localhost:8000/v1
FOUNDARYLOCAL_MODEL_ID=qwen2.5-14b

# -----------------------------------------
# Azure Speech Services (Optional)
# -----------------------------------------
AZURE_STT_SUBSCRIPTIONKEY=your_azure_stt_key
AZURE_STT_ENDPOINT=https://eastasia.api.cognitive.microsoft.com/
AZURE_STT_REGION=eastasia
AZURE_TTS_SUBSCRIPTIONKEY=your_azure_tts_key
AZURE_TTS_ENDPOINT=https://eastasia.api.cognitive.microsoft.com/
AZURE_TTS_REGION=eastasia

# -----------------------------------------
# MCP Configuration (Optional)
# -----------------------------------------
ENABLE_MCP=false
MCP_URL=https://your-mcp-endpoint.com/mcp
MCP_API_TOKEN=your_mcp_token_here

